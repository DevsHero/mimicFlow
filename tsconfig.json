{
    "compilerOptions": {
        "module": "Node16",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node16",
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "src/shared/*"
            ],
            "@extension/*": [
                "src/extension/*"
            ]
        }
    },
    "include": [
        "src/extension/**/*",
        "src/shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/webview"
    ]
}